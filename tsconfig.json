{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["packages/core/src/*"],
      "@plus/*": ["packages/plus/src/*"]
    },
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "packages",
    "apps"
  ]
}
